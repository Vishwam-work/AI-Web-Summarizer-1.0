{
"manifest_version": 3,
  "name": "AI Web Summarizer",
  "version": "1.0",
  "description": "Extract and summarize content using Gemini API",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "host_permissions": ["<all_urls>"]
}
